{% extends '::base.html.twig' %}
{% block title %}Productos{% endblock %}
{% block body %}
<div class ="container">
	<table class="table table-hover">
		<div><h3> PRODUCTOS </h3></div>
		
		<tr>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Proveedor</th>
			<th>Balones Vacios</th>
			<th>Balones Llenos</th>
			<th>Total de Balones</th>
		</tr>
		{% for p in productos %}
		<tr>
		    <td>{{ p.nombre }}</td>
		    <td>{{ p.precio }}</td>
		    <td>{{ p.proveedor.nombre }}</td>
		    <td>{{ p.balonVacio }}</td>
		    <td>{{ p.balonLleno }}</td>
		    <td>{{ p.total }}</td>
		    <td><a href="{{ path('administracion_producto_actualizar',{ 'id':p.IdProductos }) }}">Actualizar</a></td>
		</tr>	
		{% endfor %}	
	</table>
	<a class="btn btn-success" href="{{ path('administracion_producto_nuevo') }}">AÃ±adir</a>
	<a class="btn btn-primary" href="{{ path('administracion_principal') }}">Inicio</a>
</div>
{% endblock %}