{% extends '::admin.html.twig' %}
{% block title%} Actualizar {% endblock %}
{% block body %}
{{ parent() }}
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="jumbotron">
			<h2> Editar </h2>
			<form novalidate="novalidate" action="{{ path('administracion_producto_actualizar',{'id':producto.IdProductos}) }}" method="post" {{ form_enctype(formulario) }}>
				{{ form_errors(formulario) }}
				<div class="form-group">
					{{ form_label(formulario.nombre) }}
					{% if form_errors(formulario.nombre) %}
						<div class="alert alert-danger">{{ form_errors(formulario.nombre) }}</div>
					{% endif %}
					{{ form_widget(formulario.nombre,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(formulario.precio) }}
					{% if form_errors(formulario.precio) %}
						<div class="alert alert-danger">{{ form_errors(formulario.precio) }}</div>
					{% endif %}
					{{ form_widget(formulario.precio,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(formulario.proveedor) }}
					{% if form_errors(formulario.proveedor) %}
						<div class="alert alert-danger">{{ form_errors(formulario.proveedor) }}</div>
					{% endif %}
					{{ form_widget(formulario.proveedor,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(formulario.balonVacio) }}
					{% if form_errors(formulario.balonVacio) %}
						<div class="alert alert-danger">{{ form_errors(formulario.balonVacio) }}</div>
					{% endif %}
					{{ form_widget(formulario.balonVacio,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(formulario.balonLleno) }}
					{% if form_errors(formulario.balonLleno) %}
						<div class="alert alert-danger">{{ form_errors(formulario.balonLleno) }}</div>
					{% endif %}
					{{ form_widget(formulario.balonLleno,{'attr':{'class':'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(formulario.total) }}
					{% if form_errors(formulario.total) %}
						<div class="alert alert-danger">{{ form_errors(formulario.total) }}</div>
					{% endif %}
					{{ form_widget(formulario.total,{'attr':{'class':'form-control'}}) }}
				</div>
				{{ form_rest(formulario) }}
				<input class="btn btn-success" type="submit" value="Actualizar" >
			</form>
		</div>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
{% endblock %}