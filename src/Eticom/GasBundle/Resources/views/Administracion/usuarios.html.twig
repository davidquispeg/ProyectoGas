{% extends '::admin.html.twig' %}
{% block title %}Listado de Usuarios{% endblock %}
{% block body %}
{{ parent() }}
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="jumbotron">
				<h3>Listado de usuarios</h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Apellidos</th>
						<th>Nombres</th>
						<th>Usuarios</th>
					</tr>
				</thead>
				<tbody>
					{% for u in usuarios %}
					<tr>
						<td>{{ u.apellido }}</td>
						<td>{{ u.nombre }}</td>
						<td>{{ u.usuario }}</td>
						<td><a onclick="return confirm('Esta Seguro de eliminar a {{ u.nombre }} {{ u.apellido }}');"  
							href="{{ path('administracion_eliminar_usuario',{'id':u.IdUsuario}) }}">Dar de Baja</a></td>
					</tr>
					{% endfor %}
				</tbody>				
			</table>
			</div>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
{% endblock %}