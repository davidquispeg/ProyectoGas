{% extends '::admin.html.twig' %}
{% block title %} Registro de usuario {% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<div class="jumbotron">
				<form novalidate="novalidate" action="{{ path('administracion_usuario_registro') }}" method="post" {{ form_enctype(formulario) }} >
					{{ form_errors(formulario) }}
					
					<legend>Datos personales</legend>
					<div class="form-group">
						{{ form_label(formulario.nombre) }}
						{% if form_errors(formulario.nombre) %}
							<div class="alert alert-danger">{{ form_errors(formulario.nombre) }}</div>
						{% endif %}
						{{ form_widget(formulario.nombre,{ 'attr':{ 'class':'form-control' }}) }}
					</div>
					<div class="form-group">
						{{ form_label(formulario.apellido) }}
						{% if form_errors(formulario.apellido) %}
							<div class="alert alert-danger">{{ form_errors(formulario.apellido) }}</div>
						{% endif %}
						{{ form_widget(formulario.apellido,{ 'attr':{ 'class':'form-control' }}) }}
					</div>
										
						<fieldset>
							<legend>Datos de usuario</legend>
							<div class="form-group">
								{{ form_label(formulario.usuario) }}
								{% if form_errors(formulario.usuario) %}
									<div class="alert alert-danger">{{ form_errors(formulario.usuario) }}</div>
								{% endif %}
								{{ form_widget(formulario.usuario,{ 'attr':{ 'class':'form-control' }}) }}
							</div>

							<div class="form-group">
								{{ form_errors(formulario.password) }}
								{{ form_widget(formulario.password) }}
							</div>
							<div class="form-group">								
								{{ form_label(formulario.rol) }}
								{{ form_errors(formulario.rol) }}
								{{ form_widget(formulario.rol,{ 'attr':{ 'class':'form-control' }}) }}
							</div>
						</fieldset>					
					{{ form_rest(formulario) }}
					<input type="submit" value="Registrar" class="btn btn-success" />
				</form>
			</div>
		</div>
		<div class="col-md-3"></div>
	</div>
</div>
{% endblock %}