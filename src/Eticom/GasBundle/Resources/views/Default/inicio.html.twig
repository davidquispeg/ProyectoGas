{% extends '::base.html.twig' %}
{% block body %}

<div class="container">
	<div class="row">
		<p><hr/></p>
		<div class="col-md-4"></div>
		<div class="col-md-4">			
			<form action = "{{ path('eticom_gas_inicio') }}" method="post" {{ form_enctype(formulario) }}>
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="page-header">
							<h3>Bienvenido!</h3>
						</div>						
						<div class="form-group">
							{{ form_label(formulario.telefono,'Ingrese el Numero Telefonico') }}
							{{ form_errors(formulario.telefono) }}
							<div class="input-group">
								<span class="input-group-addon" ><span class="glyphicon glyphicon-phone-alt"></span></span>
								{{ form_widget(formulario.telefono, { 'attr': {'class':'form-control'}}) }}
							</div>
					    </div>
					    {{ form_rest(formulario) }}
					    <hr>
					    <input type="submit" value="Verificar" class="btn btn-success">
					</div>
				</div>
			</form>			
			
			<div>
				<a class="btn btn-primary" href="{{ path('eticom_gas_menucliente') }}">Clientes</a>
				<a class="btn btn-primary" href="{{ path('eticom_gas_reporteventas') }}">Reportes</a>
				<a href="{{ path('usuario_logout') }}">Cerrar Sesion</a>
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>

{% endblock %}


