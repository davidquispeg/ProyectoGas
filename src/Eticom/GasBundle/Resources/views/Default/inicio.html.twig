{% extends  is_granted('ROLE_ADMIN') ? '::admin.html.twig' : '::frontend.html.twig' %}

{% block body %}
{{ parent() }}
<div class="container">
	<div class="row">		
		<div class="col-md-4"></div>
		<div class="col-md-4">			
			<form action = "{{ path('eticom_gas_inicio') }}" method="post" {{ form_enctype(formulario) }}>
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="page-header">
							<h3>Bienvenido!</h3>
						</div>						
						<div class="form-group">
							{{ form_label(formulario.telefono,'Ingrese el Numero Telefonico') }}
							{{ form_errors(formulario.telefono) }}
							<div class="input-group">
								<span class="input-group-addon" ><span class="glyphicon glyphicon-phone-alt"></span></span>
								{{ form_widget(formulario.telefono, { 'attr': {'class':'form-control'}}) }}
							</div>
					    </div>
					    {{ form_rest(formulario) }}
					    <hr>
					    <input type="submit" value="Verificar" class="btn btn-success">
					</div>
				</div>
			</form>			
		</div>
		<div class="col-md-4"></div>
	</div>
</div>
{% endblock %}