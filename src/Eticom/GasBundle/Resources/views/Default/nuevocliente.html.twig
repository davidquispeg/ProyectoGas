{% extends '::base.html.twig' %}

{% block title %} Registro de usuario {% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div>
                <h2>Registro del Usuario</h2>
            </div>
            <form novalidate="novalidate" action = "{{ path('eticom_gas_nuevocliente') }}" method="post" {{ form_enctype(form) }}>
                {{ form_errors(form) }}
                <div class="form-group">
                    <div>
                        {{ form_label(form.apellido) }}
                        {{ form_errors(form.apellido) }}
                        {{ form_widget(form.apellido, {'attr':{ 'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        {{ form_label(form.nombre) }}
                        {{ form_errors(form.nombre) }}
                        {{ form_widget(form.nombre, {'attr':{ 'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        {{ form_label(form.celular) }}
                        {{ form_errors(form.celular) }}
                        {{ form_widget(form.celular, {'attr':{ 'class':'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        {{ form_label(form.direccion) }}
                        {{ form_errors(form.direccion) }}
                        {{ form_widget(form.direccion, {'attr':{ 'class':'form-control'}}) }}
                    </div>
                {{ form_rest(form) }}
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn"/>
                </div>
            </form>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>
{% endblock %}