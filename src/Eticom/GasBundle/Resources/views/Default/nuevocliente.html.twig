{% extends  is_granted('ROLE_ADMIN') ? '::admin.html.twig' : '::frontend.html.twig' %}

{% block title %} Registro de usuario {% endblock %}
{% block body %}
{{ parent() }}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="jumbotron">
                <div>
                    <h2>Registro del Usuario</h2>
                </div>
                <form novalidate="novalidate" action = "{{ path('eticom_gas_nuevocliente') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div>
                            {{ form_label(form.apellido) }}                            
                            {% if form_errors(form.apellido) %}
                                <div class="alert alert-danger">{{ form_errors(form.apellido) }}</div>
                            {% endif %}
                            {{ form_widget(form.apellido, {'attr':{ 'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            {{ form_label(form.nombre) }}
                            {% if form_errors(form.nombre) %}
                                <div class="alert alert-danger">{{ form_errors(form.nombre) }}</div>
                            {% endif %}
                            {{ form_widget(form.nombre, {'attr':{ 'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            {{ form_label(form.celular) }}
                            {% if form_errors(form.celular) %}
                                <div class="alert alert-danger">{{ form_errors(form.celular) }}</div>
                            {% endif %}
                            {{ form_widget(form.celular, {'attr':{ 'class':'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            {{ form_label(form.direccion) }}
                            {% if form_errors(form.direccion) %}
                                <div class="alert alert-danger">{{ form_errors(form.direccion) }}</div>
                            {% endif %}
                            {{ form_widget(form.direccion, {'attr':{ 'class':'form-control'}}) }}
                        </div>
                    {{ form_rest(form) }}
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn btn-success"/>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6"></div>
    </div>
</div>
{% endblock %}